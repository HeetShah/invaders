.page
  position relative
  display flex

  .board-wrapper
    height 50rem
    width 90%
    margin 0 auto
    background-image linear-gradient(top, white, #eee)
    border 2px solid green
    position relative

    &:focus
      outline none

    .board-header
      font-family monospace
      font-size 2em
      background-color #666
      color #ddd
      height 1.5em
      padding 10px
      border-bottom 2px solid green

    .middle-ground
      position relative
      height 44em
      width 100%

      .shot
        position absolute
        width 20px
        height 20px
        background-color red

    .player-row
      background-color #ddd
      height 3em
      bottom 0
      left 0
      width 100%
      border-top 2px solid green
      position absolute

      .inner-player-row
        position relative

        .player
          position absolute
          width 0
          height 0
          top 5px
          border-left 30px solid transparent
          border-right 30px solid transparent
          border-bottom 40px solid #aaa
